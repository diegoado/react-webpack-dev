{
  "name": "react-app",
  "scripts": {
    "start": "node scripts/start",
    "test": "node scripts/test --no-cache --env=jsdom",
    "test:coverage": "npm test -- --coverage",
    "test:watch": "npm test -- --watch",
    "lint": "semistandard --verbose | snazzy",
    "lint:fix": "semistandard --fix",
    "lint:watch": "gulp",
    "build": "node scripts/build",
    "build:analyzer": "ANALYZER=true npm run build",
    "storybook": "start-storybook -s public -c storybook -p 6006 --quiet",
    "storybook:build": "build-storybook -s public -c storybook"
  },
  "devDependencies": {
    "@storybook/addon-actions": "^3.4.6",
    "@storybook/addon-links": "^3.4.6",
    "@storybook/addons": "^3.4.6",
    "@storybook/react": "^3.4.6",
    "autoprefixer": "^8.5.0",
    "babel-core": "^6.26.3",
    "babel-eslint": "^8.2.3",
    "babel-loader": "^7.1.4",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "case-sensitive-paths-webpack-plugin": "^2.1.2",
    "chai": "^4.1.2",
    "chalk": "^2.4.1",
    "css-loader": "^0.28.11",
    "deep-freeze": "0.0.1",
    "dotenv": "^5.0.1",
    "dotenv-expand": "^4.2.0",
    "eslint": "^4.19.1",
    "eslint-config-semistandard-react": "^4.2.0",
    "eslint-loader": "^2.0.0",
    "eslint-plugin-semistandard-react": "^4.1.0",
    "extract-text-webpack-plugin": "^3.0.2",
    "file-loader": "^1.1.11",
    "fs-extra": "^6.0.1",
    "gulp": "^3.9.1",
    "html-webpack-plugin": "^3.2.0",
    "jest": "^23.1.0",
    "lodash": "^4.17.10",
    "postcss-flexbugs-fixes": "^3.3.1",
    "postcss-loader": "^2.1.5",
    "postcss-modules": "^1.1.0",
    "prop-types": "^15.6.1",
    "react-dev-utils": "^5.0.1",
    "react-hot-loader": "^4.2.0",
    "react-loadable": "^5.4.0",
    "react-test-renderer": "^16.4.1",
    "resolve": "^1.7.1",
    "semistandard": "^12.0.1",
    "snazzy": "^7.1.1",
    "style-loader": "^0.21.0",
    "sw-precache-webpack-plugin": "^0.11.5",
    "url-loader": "^1.0.1",
    "webpack": "^3.12.0",
    "webpack-bundle-analyzer": "^2.13.1",
    "webpack-dev-server": "^2.11.1",
    "webpack-manifest-plugin": "^2.0.2"
  },
  "dependencies": {
    "babel-runtime": "^6.26.0",
    "normalize.css": "^8.0.0",
    "object-assign": "^4.1.1",
    "preact": "^8.2.9",
    "preact-compat": "^3.18.0",
    "promise": "^8.0.1",
    "raf": "^3.4.0",
    "react": "^16.3.2",
    "react-dom": "^16.3.2",
    "react-redux": "^5.0.7",
    "redux": "^4.0.0",
    "whatwg-fetch": "^2.0.4"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,mjs}",
      "!src/**/*.story.{js,jsx,mjs}"
    ],
    "setupFiles": [
      "<rootDir>/polyfills.js"
    ],
    "testMatch": [
      "<rootDir>/src/**/__tests__/**/*.{js,jsx,mjs}",
      "<rootDir>/src/**/?(*.)(spec|test).{js,jsx,mjs}"
    ],
    "testEnvironment": "node",
    "testURL": "http://localhost",
    "transform": {
      "^.+\\.(js|jsx|mjs)$": "<rootDir>/node_modules/babel-jest",
      "^.+\\.css$": "<rootDir>/jest/css.transform.js",
      "^(?!.*\\.(js|jsx|mjs|css|json)$)": "<rootDir>/jest/file.transform.js"
    },
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|jsx|mjs)$"
    ],
    "moduleNameMapper": {
      "^react-native$": "react-native-web"
    },
    "moduleFileExtensions": [
      "web.js",
      "mjs",
      "js",
      "json",
      "web.jsx",
      "jsx",
      "node"
    ]
  },
  "semistandard": {
    "globals": [
      "test",
      "it",
      "describe",
      "fetch",
      "localStorage"
    ]
  },
  "criticalRendering": [
    "styles.css"
  ]
}
